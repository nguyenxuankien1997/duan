<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    app:cardCornerRadius="@dimen/list_schedule_cornerRadius"
    android:layout_marginTop="@dimen/list_schedule_margin"
    android:layout_marginLeft="@dimen/list_schedule_margin"
    android:layout_marginRight="@dimen/list_schedule_margin"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:background="@drawable/backgound_list_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="@dimen/list_schedule_expand_padding"
            android:id="@+id/titleParent"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@android:drawable/ic_menu_add"
            android:layout_margin="@dimen/list_schedule_expand_margin_imv"
            android:id="@+id/expandArrow"
            android:visibility="visible"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</android.support.v7.widget.CardView>