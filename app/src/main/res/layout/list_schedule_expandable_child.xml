<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_marginLeft="@dimen/list_schedule_margin"
    android:layout_marginRight="@dimen/list_schedule_margin"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/option_1"
            android:padding="@dimen/list_schedule_expand_padding"
            android:text="@string/schedule_option_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/option_1"
            android:id="@+id/option_2"
            android:padding="@dimen/list_schedule_expand_padding"
            android:text="@string/schedule_option_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/option_2"
            android:id="@+id/option_3"
            android:padding="@dimen/list_schedule_expand_padding"
            android:text="@string/schedule_option_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</android.support.v7.widget.CardView>